set cursorline
highlight Cursor guifg=black guibg=orange
highlight iCursor guifg=black guibg=yellow
set guicursor=n-v-c:block-Cursor
set guicursor+=i:ver100-iCursor
set guicursor+=n-v-c:blinkon0
set guicursor+=n-v-c-i:blinkwait10
" Removed 'e' from guioptions to use non-GUI tabs (bigger, bolder font)
set guioptions=gmrLt
set showtabline=0
